<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_plane_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserProfile" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/transparentshape"
        android:padding="4dp" >

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/xhdpi_searchresults" />

            <Button
                android:id="@+id/change_image"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/buttonshape"
                android:text="Change ->"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
        </FrameLayout>

        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/frameLayout1"
            android:background="@drawable/edittextnewstyle"
            android:ems="10"
            android:hint="First Name"
            android:paddingLeft="5dp"
            android:inputType="textPersonName"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#9b9b9b"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </EditText>

        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstName"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/frameLayout1"
            android:background="@drawable/edittextnewstyle"
            android:ems="10"
            android:paddingLeft="5dp"
            android:hint="Last Name"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#9b9b9b"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <EditText
            android:id="@+id/userId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/frameLayout1"
            android:background="@drawable/edittextnewstyle"
            android:ems="10"
            android:paddingLeft="5dp"
            android:hint="User Name"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#9b9b9b"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


        <EditText
            android:id="@+id/emailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/userId"
            android:background="@drawable/edittextnewstyle"
            android:ems="10"
            android:paddingLeft="5dp"
            android:hint="Click to add email address"
            android:inputType="textEmailAddress"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#9b9b9b"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>



        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailId"
            android:background="@drawable/edittextnewstyle"
            android:ems="10"
            android:paddingLeft="5dp"
            android:hint="Click to add phone number"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#9b9b9b"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


        <Button
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumber"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonshape"
            android:padding="4dp"
            android:text="Edit/Save"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>


    </RelativeLayout>


    <ImageButton
        android:id="@+id/footer_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_footerlogo"
        />
</RelativeLayout>