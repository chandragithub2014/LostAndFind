<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/social_login"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="#FFffFF"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/social_login_child"

 >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register With"
        android:layout_gravity="center_vertical"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:paddingRight="5dp"
        android:fontFamily="sans-serif-thin"
        android:textStyle="normal"
        android:textSize="15sp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/fbook"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_fb"
      />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/gplus"
        android:background="@drawable/ic_gplus"

        />


</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot username / password ?"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
         android:layout_gravity="center"
        android:id="@+id/forgot_login"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="18sp"
        ></TextView>
</LinearLayout>
